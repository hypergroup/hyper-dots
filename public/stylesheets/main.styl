
a
a:visited
a:hover
a:active
  color blue

head, style, script
  display none!important

*
  box-sizing border-box

// layout
// ------

html
  background whitesmoke
  color black
  font-family 'proxima-nova', Helvetica, Arial, san-serif
  flex-flow column
  *
    justify-content center

body
  min-height 500px
  background linear-gradient(top, white, rgba(white, 0))
  background-size 100% @min-height
  background-repeat no-repeat
  padding-top 20px
  margin 0
  display flex
  flex-flow column
  > *
    display flex

  > header
    padding 0 @padding-top @padding-top
    max-width 1000px
    margin-left auto
    margin-right auto
    flex 1 1 auto
    width 100%
    .brand
      flex 2 1 50%
      justify-content flex-start
      font-weight bold
      &:after
        content "···"
    .account
      flex 2 1 50%
      justify-content flex-end

  > footer
    padding-top @padding-top

  > main
    min-height @min-height
    padding @padding-top
    max-width 980px
    margin-left auto
    margin-right auto
    border-style solid
    border-color rgba(black, .25)
    border-width 1px 0
    flex-flow column
    width 100%

