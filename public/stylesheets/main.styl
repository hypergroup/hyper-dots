// forms
// -----

form
  flex-flow column

.form-group
  flex-flow row
  margin-bottom 10px
  span
    margin-right @margin-bottom

input
  padding 0
  margin 0
  display inline-block!important
  box-sizing content-box

.color
  size 100px
  display block

s = 50px
$unit = 10px

.game
  // for r in 1...20
  //   &[data-width={'"' + r + '"'}]
  //     width (r * s)
  for r in 1...20
    &[data-height={'"' + r + '"'}]
      height ((r * s) + $unit)
  width 100%
  .board
    position relative
    size 50% 100%
    margin 0 auto

.edges
  min-height 200px
  relative top left
  display inline-block


.edge
  position absolute
  display inline-block
  &[data-type="v"]
    transform translate(-(s / 2), (s / 2)) rotate(90deg)
  for r in 1...20
    &[data-row={'"' + r + '"'}]
      top (r * s)
  for c in 1...20
    &[data-col={'"' + c + '"'}]
      left (c * s)
  width s
  height $unit
  background #aaa
  padding 0 ($unit / 2)
  box-sizing border-box
  // border-right 5px solid transparent
  // border-left @border-right

  form
    position relative
    display block
    size 100%
    &.ng-hyper-loading .inner
      display none
    .inner
      cursor pointer
      size 100%
  .color
    absolute top
    display block
    size 100%
